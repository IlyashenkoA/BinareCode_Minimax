        <CheckBox x:Name="button7" IsChecked="False" IsEnabled="False" Margin="343,0,422,0" Grid.Row="1" />
        <CheckBox x:Name="button8" IsChecked="False" IsEnabled="False" Margin="388,0,377,0" Grid.Row="1" />
        <CheckBox x:Name="button9" IsChecked="False" IsEnabled="False" Margin="435,0,330,0" Grid.Row="1" />
        <CheckBox x:Name="button10" IsChecked="False" IsEnabled="False" Margin="481,0,284,0" Grid.Row="1" />

    </Grid>
</Window>
