        <RadioButton Margin="21,92,687,95" Grid.Row="2" Content="Player" Name="playerButton"/>
        <RadioButton Margin="21,119,687,68" Grid.Row="2" Content="Computer" Name="computerButton"/>
        
        <Grid>
            <TextBox x:Name="textBox" SelectionBrush="Transparent" Margin="45,55,270,10" Text="1001010011" FontSize="80" FontWeight="Bold" IsReadOnly="True" />
        </Grid>
        
        <CheckBox x:Name="button1" IsChecked="False" IsEnabled="False" Margin="66,0,699,0" Grid.Row="1" />
        <CheckBox x:Name="button2" IsChecked="False" IsEnabled="False" Margin="112,0,653,0" Grid.Row="1" />
        <CheckBox x:Name="button3" IsChecked="False" IsEnabled="False" Margin="159,0,606,0" Grid.Row="1" />
